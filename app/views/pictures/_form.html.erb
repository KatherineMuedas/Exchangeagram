<%= simple_form_for @picture  do |f| %>
  <!-- Check if there were any errors saving project task and display them if so -->
  <% if @picture.errors.any? %>
  <div id='error_explanation'>
    <h2><%= pluralize(@picture.errors.count, "error") %> prohibited
        this picture from being saved:</h2>
    <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <!-- Begin rendering the form -->
  <div class= 'form-group'>
    <%= f.input :title, 'Picture Title:' %><br>
  </div>
  <div class= 'form-group'>
    <%= f.input :description, 'Picture Description:' %><br>
  </div>
  <div class= 'form-group'>
   <%= f.input :category, collection: @categories, prompt: "Select the photo category" >
   <br>
  </div>

  <p>
    <%= link_to 'Back', new_picture_path, class: 'btn btn-default' %>
    <%= f.submit 'Submit', class: 'btn btn-primary' %> 
  </p>
<% end %>
